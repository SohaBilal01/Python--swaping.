name = "SOHABIAL"
print( name[:] )
print( name[::1] )
print( name[::2] )
print( name[::3] )
output:
SOHABIAL
SOHABIAL
SHBA
SAA

-----------------------------------------------------------
name = "SOHABIAL"
print( name[3::2] )
print( name[1::3] )
output:
AIL
OBL
-----------------------------------------------------------
word = "acknowledgement"

print( word[2:10:2]) #first 2 tell starting second 10 tells ending and third tells the skiping or size.
output:
kold
------------------------------------------------------------
x = 'checkpoint'
print( x[::-1])
output:
tniopkcehc
------------------continued:
print( x[9::-1])   # start from index 9 and will skip in reverse order.
print( x[7::-2])
print( x[7::-3])
output:
tniopkcehc
ipch
ikh
